<%- include('../partials/header.ejs') %>

<h1 class="center-heading">Edit User bio</h1> 

<form action="/users/<%=user._id%>?_method=PUT" method="POST">
 <label for="profileImg">Profile image URL (optional) </label>
  <input value="<%=user.profileImg || '' %>" type="text" name="profileImg" id="profileImg" placeholder="Leave blank to use a default avatar"/>
  <label for="location">Location:</label>
  <input value="<%=user.location || ""%>" type="text" name="location" id="location" />
  <label for="about">Bio description:</label>
  <textarea name="about" id="about" rows="5" ><%=user.about ||""%></textarea>
  <button class="submit-button" type="submit">Submit changes</button>
</form>

<form action="/users/<%= user._id %>" method="POST">
<button id="back-button" type="submit">Go back</button>
</form>
            
